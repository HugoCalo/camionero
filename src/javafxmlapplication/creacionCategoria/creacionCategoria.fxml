<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafxmlapplication.creacionCategoria.CreacionCategoriaController">
   <center>
      <VBox prefHeight="250.0" prefWidth="600.0">
         <children>
            <HBox alignment="CENTER" prefHeight="180.0" prefWidth="600.0">
               <children>
                  <VBox alignment="CENTER_LEFT" prefHeight="180.0" prefWidth="180.0">
                     <children>
                        <Label text="Nombre de la categoría">
                           <VBox.margin>
                              <Insets bottom="10.0" />
                           </VBox.margin>
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <TextField fx:id="nombreCategoria" prefHeight="25.0" prefWidth="167.0" promptText="nombreCategoria" />
                     </children>
                  </VBox>
                  <Region prefHeight="180.0" prefWidth="132.0" />
                  <TextField fx:id="descripcionCategoria" prefHeight="139.0" prefWidth="183.0" promptText="DescripcionCategoria" />
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
   <top>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <Label alignment="BOTTOM_LEFT" prefHeight="78.0" prefWidth="384.0" text="Creación de categoría">
               <font>
                  <Font size="37.0" />
               </font>
               <HBox.margin>
                  <Insets left="30.0" />
               </HBox.margin>
            </Label>
         </children>
      </HBox>
   </top>
   <bottom>
      <HBox alignment="CENTER_RIGHT" prefHeight="57.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="botonAceptar" mnemonicParsing="false" prefHeight="32.0" prefWidth="72.0" text="aceptar" />
            <Button fx:id="botonCancelar" mnemonicParsing="false" prefHeight="32.0" prefWidth="75.0" text="cancelar">
               <HBox.margin>
                  <Insets left="30.0" right="40.0" />
               </HBox.margin>
            </Button>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <BorderPane.margin>
            <Insets bottom="10.0" />
         </BorderPane.margin>
      </HBox>
   </bottom>
</BorderPane>
