                              <Button fx:id="anadirRecibo_boton" mnemonicParsing="false" text="+" />
                           </children>
                        </HBox>
                        <ImageView fx:id="anadirRecibo_imagen" fitHeight="127.0" fitWidth="196.0" pickOnBounds="true" preserveRatio="true" />
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
