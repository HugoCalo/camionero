                           </VBox.margin>
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <TextField fx:id="nombreGasto" prefHeight="25.0" prefWidth="167.0" promptText="nombreGasto">
                           <VBox.margin>
                              <Insets bottom="10.0" />
                           </VBox.margin></TextField>
                        <HBox>
                           <children>
                              <Label text="Coste">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                                 <HBox.margin>
                                    <Insets right="125.0" />
                                 </HBox.margin>
                              </Label>
                              <Label text="Unidades">
                                 <font>
                                    <Font size="14.0" />
